meta(charset='UTF-8')
meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')

title= page.title ? page.title + ' | ' + config.title : config.title

meta(name='description', content= page.intro ? page.intro : config.meta_description)
meta(name='generator', content= config.title)
meta(name='author', content= config.author)
meta(name='keywords', content= config.keywords)
meta(name='HandheldFriendly', content='True')
meta(name='MobileOptimized', content='320')
meta(name='photoCredit', content='(c) yod67 www.fotosearch.com Stock Photography')
meta(name='viewport', content='width=device-width,initial-scale=1.0,maximum-scale=1,user-scalable=0')

link(rel='stylesheet', type='text/css', href=config.root + 'styles/screen.css')

link(rel='apple-touch-icon', sizes='180x180', href='/images/apple-touch-icon.png')
link(rel='icon', type='image/png', sizes='32x32', href='/images/favicon-32x32.png')
link(rel='icon', type='image/png', sizes='16x16', href='/images/favicon-16x16.png')
link(rel='manifest' href='/images/site.webmanifest')
link(rel='mask-icon' href='/images/safari-pinned-tab.svg' color='#d89c2e')

meta(name='msapplication-TileColor' content='#da532c')
meta(name='theme-color' content='#ffffff')

//- if config.rss
   link(rel='alternate', type='application/rss+xml', title='RSS', href= config.rss)
//- if config.feed && config.feed.type == 'rss'
  link(rel='alternate', type='application/rss+xml', title='RSS', href= config.feed.path)
//- if config.feed && config.feed.type == 'atom'
  link(rel='alternate', type='application/atom+xml', title='Atom 0.3', href= config.feed.path)